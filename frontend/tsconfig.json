{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "module": "es2015",
    "jsx": "react",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2020",
      "dom",
    ],
    "baseUrl": "./",
    "paths": {
      "@api": ["src/api/index.ts"],
      "@components": ["src/components/index.ts"],
      "@config": ["src/config/index.ts"],
      "@contexts": ["src/contexts/index.ts"],
    }
  },
  "include": [
    "./src/**/*"
  ],
}
